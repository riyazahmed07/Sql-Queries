//Creating New Database

create database StudentDb

//Creating Student Table

CREATE TABLE [dbo].[StudentInfo](
	[StudentId] [int] NOT NULL,
	[Name] [varchar](50) NOT NULL,
	[Age] [int] NOT NULL,
	[Address] [varchar](250) NULL,
 CONSTRAINT [PK_StudentInfo] PRIMARY KEY(StudentId));
 
 //Creating StudentMarks Table
 
 CREATE TABLE StudentMarks (
    Mark1 int NOT NULL,
    Mark2 int NOT NULL,
	Mark3 int NOT NULL,
    StudentID int,
	Total Int Not Null,
    FOREIGN KEY (StudentID) REFERENCES Studentinfo(StudentID)
);

//Delete Table

drop table orders;

//Add New Column To Existing Table

alter table marks add AvgMarks decimal(3,2);

//Altering Particular Column

alter table marks alter column AvgMarks numeric(4,2) Not Null;

//Add Check Constraint for marks not greater than 100

ALTER TABLE marks add CONSTRAINT CHK_Marks CHECK (Mark1<=100 AND Mark2<=100 and Mark3<=100);




